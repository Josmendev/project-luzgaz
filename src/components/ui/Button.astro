---
// Types
export type ButtonVariants = "solid" | "outline" | "default" | "soft" | "link" | "gradient";
export type ButtonDimensions = "xs" | "sm" | "default" | "lg" | "xl";
export type ButtonColors = "primary" | "secondary" | "tertiary" | "blue" | "amber" | "gray" | "red" | "lime" | "emerald" | "sky" | "violet";

// Props interface
export interface Props {
  variant?: ButtonVariants;
  dimension?: ButtonDimensions;
  color?: ButtonColors;
  isActive?: boolean;
  isDisabled?: boolean;
  isLoading?: boolean;
  rounded?: string;
  borderWidth?: string;
  type?: "button" | "submit" | "reset";
  class?: string;
  onclick?: string;
}

// Destructure props with defaults
const {
  variant = "default",
  dimension = "default",
  color = "primary",
  isActive = false,
  isDisabled = false,
  isLoading = false,
  rounded = "rounded-lg",
  borderWidth = "border-0",
  type = "button",
  class: className = "",
  onclick,
  ...rest
} = Astro.props;

// Check if has slots
const hasChildren = Astro.slots.has("default");
const hasLeftIcon = Astro.slots.has("leftIcon");
const hasRightIcon = Astro.slots.has("rightIcon");

// Button variants with colors
const btnVariants: Record<ButtonVariants, Record<ButtonColors, string>> = {
  solid: {
    primary:
      "text-white bg-primary-500 hover:bg-primary-600 active:bg-primary-700 shadow-lg shadow-primary-500/25 hover:shadow-primary-500/40 transform hover:scale-[1.02] active:scale-[0.98]",
    secondary:
      "text-white bg-secondary-500 hover:bg-secondary-600 active:bg-secondary-700 shadow-lg shadow-secondary-500/25 hover:shadow-secondary-500/40 transform hover:scale-[1.02] active:scale-[0.98]",
    tertiary:
      "text-black bg-tertiary-400 hover:bg-tertiary-500 active:bg-tertiary-600 shadow-lg shadow-tertiary-400/25 hover:shadow-tertiary-500/40 transform hover:scale-[1.02] active:scale-[0.98]",
    blue: "text-white bg-blue-500 hover:bg-blue-600 active:bg-blue-700 shadow-lg shadow-blue-500/25 hover:shadow-blue-500/40 transform hover:scale-[1.02] active:scale-[0.98]",
    amber:
      "text-black bg-amber-400 hover:bg-amber-500 active:bg-amber-600 shadow-lg shadow-amber-400/25 hover:shadow-amber-500/40 transform hover:scale-[1.02] active:scale-[0.98]",
    gray: "text-white bg-gray-600 hover:bg-gray-700 active:bg-gray-800 shadow-lg shadow-gray-600/25 hover:shadow-gray-700/40 transform hover:scale-[1.02] active:scale-[0.98]",
    red: "text-white bg-red-500 hover:bg-red-600 active:bg-red-700 shadow-lg shadow-red-500/25 hover:shadow-red-500/40 transform hover:scale-[1.02] active:scale-[0.98]",
    lime: "text-black bg-lime-400 hover:bg-lime-500 active:bg-lime-600 shadow-lg shadow-lime-400/25 hover:shadow-lime-500/40 transform hover:scale-[1.02] active:scale-[0.98]",
    emerald:
      "text-white bg-emerald-500 hover:bg-emerald-600 active:bg-emerald-700 shadow-lg shadow-emerald-500/25 hover:shadow-emerald-500/40 transform hover:scale-[1.02] active:scale-[0.98]",
    sky: "text-white bg-sky-500 hover:bg-sky-600 active:bg-sky-700 shadow-lg shadow-sky-500/25 hover:shadow-sky-500/40 transform hover:scale-[1.02] active:scale-[0.98]",
    violet:
      "text-white bg-violet-500 hover:bg-violet-600 active:bg-violet-700 shadow-lg shadow-violet-500/25 hover:shadow-violet-500/40 transform hover:scale-[1.02] active:scale-[0.98]",
  },
  outline: {
    primary:
      "text-primary-600 border-2 border-primary-500/50 bg-transparent hover:border-primary-500 hover:bg-primary-50 active:bg-primary-100 transform hover:scale-[1.01] active:scale-[0.99] ",
    secondary:
      "text-secondary-600 border-2 border-secondary-500/50 bg-transparent hover:border-secondary-500 hover:bg-secondary-50 active:bg-secondary-100 transform hover:scale-[1.01] active:scale-[0.99] ",
    tertiary:
      "text-tertiary-600 border-2 border-tertiary-400/50 bg-transparent hover:border-tertiary-400 hover:bg-tertiary-50 active:bg-tertiary-100 transform hover:scale-[1.01] active:scale-[0.99] ",
    blue: "text-blue-600 border-2 border-blue-500/50 bg-transparent hover:border-blue-500 hover:bg-blue-50 active:bg-blue-100 transform hover:scale-[1.01] active:scale-[0.99]",
