    red: "text-red-600 border-2 border-red-500/50 bg-transparent hover:border-red-500 hover:bg-red-50 active:bg-red-100 transform hover:scale-[1.01] active:scale-[0.99]",
    lime: "text-lime-600 border-2 border-lime-400/50 bg-transparent hover:border-lime-400 hover:bg-lime-50 active:bg-lime-100 transform hover:scale-[1.01] active:scale-[0.99]",
    emerald:
      "text-emerald-600 border-2 border-emerald-500/50 bg-transparent hover:border-emerald-500 hover:bg-emerald-50 active:bg-emerald-100 transform hover:scale-[1.01] active:scale-[0.99]",
    sky: "text-sky-600 border-2 border-sky-500/50 bg-transparent hover:border-sky-500 hover:bg-sky-50 active:bg-sky-100 transform hover:scale-[1.01] active:scale-[0.99]",
    violet:
      "text-violet-600 border-2 border-violet-500/50 bg-transparent hover:border-violet-500 hover:bg-violet-50 active:bg-violet-100 transform hover:scale-[1.01] active:scale-[0.99]",
  },
  default: {
    primary:
      "text-primary-600 bg-transparent hover:text-primary-700 hover:bg-primary-50 active:bg-primary-100 transform hover:scale-[1.01] active:scale-[0.99] ",
    secondary:
      "text-secondary-600 bg-transparent hover:text-secondary-700 hover:bg-secondary-50 active:bg-secondary-100 transform hover:scale-[1.01] active:scale-[0.99] ",
    tertiary:
      "text-tertiary-600 bg-transparent hover:text-tertiary-700 hover:bg-tertiary-50 active:bg-tertiary-100 transform hover:scale-[1.01] active:scale-[0.99] ",
    blue: "text-blue-600 bg-transparent hover:text-blue-700 hover:bg-blue-50 active:bg-blue-100 transform hover:scale-[1.01] active:scale-[0.99] ",
    amber:
      "text-amber-600 bg-transparent hover:text-amber-700 hover:bg-amber-50 active:bg-amber-100 transform hover:scale-[1.01] active:scale-[0.99] ",
    gray: "text-gray-600 bg-transparent hover:text-gray-700 hover:bg-gray-50 active:bg-gray-100 transform hover:scale-[1.01] active:scale-[0.99] ",
    red: "text-red-600 bg-transparent hover:text-red-700 hover:bg-red-50 active:bg-red-100 transform hover:scale-[1.01] active:scale-[0.99] ",
    lime: "text-lime-600 bg-transparent hover:text-lime-700 hover:bg-lime-50 active:bg-lime-100 transform hover:scale-[1.01] active:scale-[0.99] ",
    emerald:
      "text-emerald-600 bg-transparent hover:text-emerald-700 hover:bg-emerald-50 active:bg-emerald-100 transform hover:scale-[1.01] active:scale-[0.99] ",
    sky: "text-sky-600 bg-transparent hover:text-sky-700 hover:bg-sky-50 active:bg-sky-100 transform hover:scale-[1.01] active:scale-[0.99] ",
    violet:
      "text-violet-600 bg-transparent hover:text-violet-700 hover:bg-violet-50 active:bg-violet-100 transform hover:scale-[1.01] active:scale-[0.99] ",
  },
  soft: {
    primary:
      "text-primary-700 bg-primary-100 hover:bg-primary-200 active:bg-primary-300 transform hover:scale-[1.01] active:scale-[0.99] ",
    secondary:
      "text-secondary-700 bg-secondary-100 hover:bg-secondary-200 active:bg-secondary-300 transform hover:scale-[1.01] active:scale-[0.99] ",
    tertiary:
      "text-tertiary-700 bg-tertiary-100 hover:bg-tertiary-200 active:bg-tertiary-300 transform hover:scale-[1.01] active:scale-[0.99] ",
    blue: "text-blue-700 bg-blue-100 hover:bg-blue-200 active:bg-blue-300 transform hover:scale-[1.01] active:scale-[0.99] ",
    amber:
      "text-amber-700 bg-amber-100 hover:bg-amber-200 active:bg-amber-300 transform hover:scale-[1.01] active:scale-[0.99]",
    gray: "text-gray-700 bg-gray-100 hover:bg-gray-200 active:bg-gray-300 transform hover:scale-[1.01] active:scale-[0.99] ",
    red: "text-red-700 bg-red-100 hover:bg-red-200 active:bg-red-300 transform hover:scale-[1.01] active:scale-[0.99] ",
    lime: "text-lime-700 bg-lime-100 hover:bg-lime-200 active:bg-lime-300 transform hover:scale-[1.01] active:scale-[0.99] ",
    emerald:
      "text-emerald-700 bg-emerald-100 hover:bg-emerald-200 active:bg-emerald-300 transform hover:scale-[1.01] active:scale-[0.99] ",
    sky: "text-sky-700 bg-sky-100 hover:bg-sky-200 active:bg-sky-300 transform hover:scale-[1.01] active:scale-[0.99] ",
    violet:
      "text-violet-700 bg-violet-100 hover:bg-violet-200 active:bg-violet-300 transform hover:scale-[1.01] active:scale-[0.99] ",
  },
  link: {
    primary:
      "text-primary-600 bg-transparent hover:text-primary-700 hover:underline active:text-primary-800 underline-offset-4 decoration-2 transform hover:scale-[1.01] active:scale-[0.99] ",
    secondary:
      "text-secondary-600 bg-transparent hover:text-secondary-700 hover:underline active:text-secondary-800 underline-offset-4 decoration-2 transform hover:scale-[1.01] active:scale-[0.99] ",
    tertiary:
      "text-tertiary-600 bg-transparent hover:text-tertiary-700 hover:underline active:text-tertiary-800 underline-offset-4 decoration-2 transform hover:scale-[1.01] active:scale-[0.99] ",
    blue: "text-blue-600 bg-transparent hover:text-blue-700 hover:underline active:text-blue-800 underline-offset-4 decoration-2 transform hover:scale-[1.01] active:scale-[0.99] ",
    amber:
      "text-amber-600 bg-transparent hover:text-amber-700 hover:underline active:text-amber-800 underline-offset-4 decoration-2 transform hover:scale-[1.01] active:scale-[0.99] ",
    gray: "text-gray-700 bg-transparent hover:text-gray-800 hover:underline active:text-gray-900 underline-offset-4 decoration-2 transform hover:scale-[1.01] active:scale-[0.99] ",
    red: "text-red-600 bg-transparent hover:text-red-700 hover:underline active:text-red-800 underline-offset-4 decoration-2 transform hover:scale-[1.01] active:scale-[0.99] ",
    lime: "text-lime-600 bg-transparent hover:text-lime-700 hover:underline active:text-lime-800 underline-offset-4 decoration-2 transform hover:scale-[1.01] active:scale-[0.99] ",
    emerald:
      "text-emerald-600 bg-transparent hover:text-emerald-700 hover:underline active:text-emerald-800 underline-offset-4 decoration-2 transform hover:scale-[1.01] active:scale-[0.99] ",
    sky: "text-sky-600 bg-transparent hover:text-sky-700 hover:underline active:text-sky-800 underline-offset-4 decoration-2 transform hover:scale-[1.01] active:scale-[0.99] ",
    violet:
      "text-violet-600 bg-transparent hover:text-violet-700 hover:underline active:text-violet-800 underline-offset-4 decoration-2 transform hover:scale-[1.01] active:scale-[0.99] ",
  },
  gradient: {
    primary:
      "text-white bg-gradient-to-r from-primary-500 to-secondary-500 hover:from-primary-600 hover:to-secondary-600 active:from-primary-700 active:to-secondary-700 shadow-lg shadow-primary-500/25 hover:shadow-xl hover:shadow-primary-500/40 transform hover:scale-[1.02] active:scale-[0.98] transition-all duration-300",
    secondary:
      "text-white bg-gradient-to-r from-secondary-500 to-primary-500 hover:from-secondary-600 hover:to-primary-600 active:from-secondary-700 active:to-primary-700 shadow-lg shadow-secondary-500/25 hover:shadow-xl hover:shadow-secondary-500/40 transform hover:scale-[1.02] active:scale-[0.98] transition-all duration-300",
    tertiary:
      "text-black bg-gradient-to-r from-tertiary-400 to-primary-500 hover:from-tertiary-500 hover:to-primary-600 active:from-tertiary-600 active:to-primary-700 shadow-lg shadow-tertiary-400/25 hover:shadow-xl hover:shadow-tertiary-500/40 transform hover:scale-[1.02] active:scale-[0.98] transition-all duration-300",
    blue: "text-white bg-gradient-to-r from-blue-500 to-cyan-500 hover:from-blue-600 hover:to-cyan-600 active:from-blue-700 active:to-cyan-700 shadow-lg shadow-blue-500/25 hover:shadow-xl hover:shadow-blue-500/40 transform hover:scale-[1.02] active:scale-[0.98] transition-all duration-300",
    amber:
      "text-black bg-gradient-to-r from-amber-400 to-orange-400 hover:from-amber-500 hover:to-orange-500 active:from-amber-600 active:to-orange-600 shadow-lg shadow-amber-400/25 hover:shadow-xl hover:shadow-amber-500/40 transform hover:scale-[1.02] active:scale-[0.98] transition-all duration-300",
    gray: "text-white bg-gradient-to-r from-gray-600 to-slate-600 hover:from-gray-700 hover:to-slate-700 active:from-gray-800 active:to-slate-800 shadow-lg shadow-gray-600/25 hover:shadow-xl hover:shadow-gray-700/40 transform hover:scale-[1.02] active:scale-[0.98] transition-all duration-300",
    red: "text-white bg-gradient-to-r from-red-500 to-pink-500 hover:from-red-600 hover:to-pink-600 active:from-red-700 active:to-pink-700 shadow-lg shadow-red-500/25 hover:shadow-xl hover:shadow-red-500/40 transform hover:scale-[1.02] active:scale-[0.98] transition-all duration-300",
    lime: "text-black bg-gradient-to-r from-lime-400 to-green-400 hover:from-lime-500 hover:to-green-500 active:from-lime-600 active:to-green-600 shadow-lg shadow-lime-400/25 hover:shadow-xl hover:shadow-lime-500/40 transform hover:scale-[1.02] active:scale-[0.98] transition-all duration-300",
    emerald:
      "text-white bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 active:from-emerald-700 active:to-teal-700 shadow-lg shadow-emerald-500/25 hover:shadow-xl hover:shadow-emerald-500/40 transform hover:scale-[1.02] active:scale-[0.98] transition-all duration-300",
    sky: "text-white bg-gradient-to-r from-sky-500 to-blue-500 hover:from-sky-600 hover:to-blue-600 active:from-sky-700 active:to-blue-700 shadow-lg shadow-sky-500/25 hover:shadow-xl hover:shadow-sky-500/40 transform hover:scale-[1.02] active:scale-[0.98] transition-all duration-300",
    violet:
      "text-white bg-gradient-to-r from-violet-500 to-purple-500 hover:from-violet-600 hover:to-purple-600 active:from-violet-700 active:to-purple-700 shadow-lg shadow-violet-500/25 hover:shadow-xl hover:shadow-violet-500/40 transform hover:scale-[1.02] active:scale-[0.98] transition-all duration-300",
  },
};

// Button dimensions
const btnDimensions: {
  [key in ButtonDimensions]: {
    general: string;
    icon: string;
    rightIcon: string;
  };
} = {
  xs: {
    general: hasChildren ? "px-3 py-1.5 text-xs font-medium" : "p-1.5 text-xs",
    icon: hasChildren ? "mr-1.5 w-3 h-3" : "w-3 h-3",
    rightIcon: "ml-1.5 w-3 h-3",
  },
  sm: {
    general: hasChildren ? "px-4 py-2 text-sm font-medium" : "p-2 text-sm",
    icon: hasChildren ? "mr-2 w-4 h-4" : "w-4 h-4",
    rightIcon: "ml-2 w-4 h-4",
  },
  default: {
    general: hasChildren
      ? "px-6 py-2.5 text-base font-medium"
      : "p-2.5 text-base",
    icon: hasChildren ? "mr-2 w-5 h-5" : "w-5 h-5",
    rightIcon: "ml-2 w-5 h-5",
  },
  lg: {
    general: hasChildren ? "px-8 py-3 text-lg font-semibold" : "p-3 text-lg",
    icon: hasChildren ? "mr-2.5 w-6 h-6" : "w-6 h-6",
    rightIcon: "ml-2.5 w-6 h-6",
  },
  xl: {
    general: hasChildren ? "px-10 py-4 text-xl font-semibold" : "p-4 text-xl",
    icon: hasChildren ? "mr-3 w-7 h-7" : "w-7 h-7",
    rightIcon: "ml-3 w-7 h-7",
  },
};

// Build classes
const btnVariantClasses = btnVariants[variant][color];
const btnDimensionClasses = btnDimensions[dimension].general;
const btnLeftIconClasses = btnDimensions[dimension].icon;
const btnRightIconClasses = hasChildren
  ? btnDimensions[dimension].rightIcon
  : "";

const disabledClasses =
  isDisabled || isLoading
    ? "opacity-50 pointer-events-none cursor-not-allowed"
    : "cursor-pointer";
const activeClasses = isActive ? "ring-2 ring-offset-2 ring-current" : "";

const baseClasses =
  "inline-flex items-center justify-center font-medium transition-all duration-300 ease-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-current/50";

const classes = [
  baseClasses,
  btnVariantClasses,
  btnDimensionClasses,
  borderWidth,
  rounded,
  disabledClasses,
  activeClasses,
  className,
]
  .filter(Boolean)
  .join(" ");
---

<button
  type={type}
  class={classes}
  disabled={isDisabled || isLoading}
  onclick={onclick}
  data-component-name="Button"
  data-active={isActive}
  {...rest}
>
  {
    (hasLeftIcon || isLoading) && (
      <Fragment>
        {isLoading ? (
          <svg
            class={`animate-spin ${btnLeftIconClasses}`}
            fill="none"
            viewBox="0 0 24 24"
          >
            <circle
              class="opacity-25"
              cx="12"
              cy="12"
              r="10"
              stroke="currentColor"
              stroke-width="4"
            />
            <path
              class="opacity-75"
              fill="currentColor"
              d="m4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
            />
          </svg>
        ) : (
          hasLeftIcon && (
            <div class={btnLeftIconClasses}>
              <slot name="leftIcon" />
            </div>
          )
        )}
      </Fragment>
    )
  }

  <slot />

  {
    hasRightIcon && !isLoading && (
      <div 
        class={`${btnRightIconClasses} transition-transform duration-300 group-hover:translate-x-0.5`}
      >
        <slot name="rightIcon" />
      </div>
    )
  }
</button>