        </div>
        <div
          class="absolute top-32 right-20 w-16 h-16 bg-luzgas-green rounded-full floating-2"
        >
        </div>
        <div
          class="absolute bottom-20 left-32 w-12 h-12 bg-luzgas-yellow rounded-full floating-3"
        >
        </div>
        <div
          class="absolute bottom-40 right-10 w-24 h-24 bg-luzgas-blue rounded-full floating-1"
        >
        </div>
        <!-- Additional animated elements -->
        <div class="absolute top-1/2 left-1/4 w-8 h-8 bg-luzgas-green/30 rounded-full floating-2"></div>
        <div class="absolute top-1/3 right-1/3 w-6 h-6 bg-luzgas-yellow/40 rounded-full floating-3"></div>
      </div>

      <!-- Parallax Grid Background -->
      <div class="absolute inset-0 opacity-5">
        <div class="grid-background"></div>
      </div>

      <div
