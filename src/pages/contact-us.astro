---
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Contacto - LUZGAS Asesoría Energética"
  description="Contacta con LUZGAS para recibir asesoría energética personalizada. Teléfono, email y formulario de contacto disponibles."
>
  <Header />
  <main class="pt-16">
    <!-- Main Contact Component -->
    <div class="scroll-animate" data-animate="fade-up">
      <Contact />
    </div>

    <!-- Sección de Ubicación con Mapa -->
    <section
      class="min-h-screen flex items-center justify-center bg-gradient-to-br from-luzgas-blue to-blue-600 relative overflow-hidden scroll-animate"
      data-animate="fade-left"
    >
      <!-- Background Elements -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-20 left-10 w-32 h-32 bg-white rounded-full"></div>
        <div class="absolute bottom-20 right-20 w-24 h-24 bg-white rounded-full"></div>
        <div class="absolute top-40 right-32 w-16 h-16 bg-white rounded-full"></div>
      </div>

      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full flex flex-col items-center">
        <!-- Header Section -->
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-5xl font-bold text-white mb-2 md:mb-3!">
            Nuestra <span class="text-luzgas-yellow">Ubicación</span>
          </h2>
          <p class="text-xl text-white max-w-3xl mx-auto leading-relaxed">
            Visítanos en nuestras oficinas en el corazón de Madrid
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <!-- Información de Ubicación -->
          <div class="space-y-8 scroll-animate" data-animate="fade-right">
            <!-- Dirección Principal -->
            <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-8 shadow-xl border border-white/30 hover:shadow-2xl hover:scale-105 transition-all duration-300 group">
              <div class="flex items-start space-x-6">
                <div class="w-20 h-20 bg-gradient-to-br from-luzgas-yellow to-orange-400 rounded-xl flex items-center justify-center flex-shrink-0 group-hover:rotate-12 transition-transform duration-300">
                  <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="text-2xl font-bold text-white mb-2">Oficina Principal</h4>
                  <p class="text-xl text-luzgas-yellow font-semibold mb-2">Calle Ejemplo 123</p>
                  <p class="text-lg text-white/90 mb-4">28001 Madrid, España</p>
                  <div class="flex flex-wrap gap-2">
                    <span class="bg-white/20 text-white px-3 py-1 rounded-full text-sm">Metro: Sol</span>
                    <span class="bg-white/20 text-white px-3 py-1 rounded-full text-sm">Parking Disponible</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Horarios de Atención -->
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20 hover:bg-white/20 hover:scale-105 transition-all duration-300">
              <h4 class="text-2xl font-bold text-white mb-6 text-center">Horarios de Atención</h4>
              <div class="grid grid-cols-2 gap-4 text-center">
                <div class="bg-white/20 rounded-xl p-4">
                  <p class="font-bold text-white">Lunes - Viernes</p>
                  <p class="text-luzgas-yellow font-semibold">9:00 - 18:00</p>
                </div>
                <div class="bg-white/20 rounded-xl p-4">
                  <p class="font-bold text-white">Sábados</p>
                  <p class="text-luzgas-green font-semibold">10:00 - 14:00</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Mapa Interactivo -->
          <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 shadow-xl border border-white/20 scroll-animate" data-animate="fade-left">
            <h4 class="text-2xl font-bold text-white mb-6 text-center">Encuéntranos Aquí</h4>

            <!-- Contenedor del Mapa -->
            <div class="bg-white rounded-xl overflow-hidden shadow-2xl">
              <div id="map-container" class="w-full h-96 bg-gray-200 flex items-center justify-center relative">
                <!-- Placeholder del mapa -->
                <div class="text-center">
                  <div class="w-16 h-16 bg-luzgas-blue rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                  <p class="text-gray-600 font-semibold">Cargando mapa...</p>
                  <p class="text-gray-500 text-sm">Calle Ejemplo 123, Madrid</p>
                </div>

                <!-- Iframe de Google Maps -->
                <iframe
                  src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3037.823775997562!2d-3.7037902846216085!3d40.41677597936212!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd42287c4d4b7b6b%3A0x9c42c9aad7b3c2db!2sPuerta%20del%20Sol%2C%20Madrid%2C%20Spain!5e0!3m2!1sen!2sus!4v1635959746000!5m2!1sen!2sus"
                  width="100%"
                  height="100%"
                  style="border:0;"
                  allowfullscreen=""
                  loading="lazy"
                  referrerpolicy="no-referrer-when-downgrade"
                  class="absolute inset-0">
                </iframe>
              </div>
            </div>

            <!-- Enlaces de Mapa -->
            <div class="grid grid-cols-2 gap-4 mt-6">
              <a href="https://goo.gl/maps/example" target="_blank" class="bg-white/20 hover:bg-white/30 hover:scale-105 text-white px-4 py-3 rounded-lg font-semibold text-center transition-all duration-300 border border-white/30">
                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
                Abrir en Google Maps
              </a>
              <a href="tel:+34667275919" class="bg-luzgas-green hover:bg-green-600 hover:scale-105 text-white px-4 py-3 rounded-lg font-semibold text-center transition-all duration-300">
                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                Llamanos
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  main {
    min-height: 100vh;
  }
</style>

<script>
	window.addEventListener('load', function() {
		const form = document.getElementById('contact-form');
		if (!form) return;

		form.addEventListener('submit', async function(e) {
			e.preventDefault();

			// Mostrar loading en el botón
			const submitButton = this.querySelector('button[type="submit"]') as HTMLButtonElement;
			const originalContent = submitButton?.innerHTML || '';
			if (submitButton) {
				submitButton.innerHTML = `
					<svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
						<circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
						<path class="opacity-75" fill="currentColor" d="m4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
					</svg>
					Enviando...
				`;
				submitButton.disabled = true;
			}

			try {
				// Get form data
				const formData = new FormData(this as HTMLFormElement);
				const data = Object.fromEntries(formData.entries());

				// Enviar al API
				const response = await fetch('/api/send-contact', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json',
					},
					body: JSON.stringify(data)
				});

				const result = await response.json();

				if (!response.ok || !result.success) {
					throw new Error(result.message || 'Error al enviar el mensaje');
				}

				// Show success toast
				window.toast.show({
					message: '¡Gracias por tu mensaje! Te contactaremos pronto.',
					type: 'success',
					duration: 5000
				});

				// Reset form
				(this as HTMLFormElement).reset();

			} catch (error) {
				const errorMessage = error instanceof Error ? error.message : 'Error desconocido';
				window.toast.show({
					message: 'Error: ' + errorMessage,
					type: 'error',
					duration: 6000
				});
			} finally {
				// Restaurar botón
				if (submitButton) {
					submitButton.innerHTML = originalContent;
					submitButton.disabled = false;
				}
			}
		});
	});
</script>

